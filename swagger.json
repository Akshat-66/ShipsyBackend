{
    "openapi": "3.0.0",
    "info": {
        "title": "Shipsy Backend API",
        "description": "API documentation for Shipsy Backend shipping management system",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:6060",
            "description": "Development server"
        }
    ],
    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "description": "Username for the new account"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "Password for the new account"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful"
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/auth/logout": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout user",
                "responses": {
                    "200": {
                        "description": "Logout successful"
                    }
                }
            }
        },
        "/ship/create": {
            "post": {
                "tags": [
                    "Shipments"
                ],
                "summary": "Create a new shipment order",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ShipmentInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Shipment created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Shipment"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/ship/all": {
            "get": {
                "tags": [
                    "Shipments"
                ],
                "summary": "Get all shipment orders",
                "responses": {
                    "200": {
                        "description": "List of all shipments",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Shipment"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/ship/update": {
            "patch": {
                "tags": [
                    "Shipments"
                ],
                "summary": "Update a shipment order",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "shipmentId": {
                                        "type": "string"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "Pending",
                                            "In Transit",
                                            "Delivered",
                                            "Cancelled"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Shipment updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Shipment"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Shipment not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "orders": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "Shipment": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "shipmentName": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "Pending",
                            "In Transit",
                            "Delivered",
                            "Cancelled"
                        ]
                    },
                    "isInternational": {
                        "type": "boolean"
                    },
                    "basePrice": {
                        "type": "number"
                    },
                    "weight": {
                        "type": "number"
                    },
                    "ratePerKg": {
                        "type": "number"
                    },
                    "destination": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "ShipmentInput": {
                "type": "object",
                "required": [
                    "shipmentName",
                    "basePrice",
                    "weight",
                    "ratePerKg",
                    "destination"
                ],
                "properties": {
                    "shipmentName": {
                        "type": "string"
                    },
                    "isInternational": {
                        "type": "boolean"
                    },
                    "basePrice": {
                        "type": "number",
                        "minimum": 0
                    },
                    "weight": {
                        "type": "number",
                        "minimum": 0
                    },
                    "ratePerKg": {
                        "type": "number",
                        "minimum": 0
                    },
                    "destination": {
                        "type": "string"
                    }
                }
            }
        }
    }
}